            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
