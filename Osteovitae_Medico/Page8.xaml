        <Button x:Name="tratamentosBtn" Grid.Column="0" Grid.Row="3" Margin="216,0,0,0" Height="45" Width="55.6" VerticalAlignment="Top" HorizontalAlignment="Left" Click="tratamentosBtn_Click">
