<Page x:Class="Osteovitae_Medico.Page10"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Osteovitae_Medico"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="Page10">
    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="395"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- TITULO DA PÁGINA -->
        <Grid Grid.Column="7" Grid.Row="0" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image Source="icons/Borboleta.png" Opacity="0.5" Height="40" Width="40" Margin="0,0,0,0"/>
        </Grid>
        <Label Grid.Column="5" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8.5,20,0" FontSize="12" FontFamily="Cambria" FontStyle="Italic" Foreground="#FF066868" FontWeight="Bold" Grid.ColumnSpan="2" Content="Osteovitae"/>
        <Label Grid.Column="0" Grid.Row="0" Height="35" Width="390" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" VerticalContentAlignment="Center" FontSize="18" FontFamily="Calibri"  Background="#FF066868" Foreground="White" FontWeight="Bold" Content="CONTA PESSOAL" Margin="0.2,0"/>

        <Button x:Name="voltarButton" Grid.Column="0" Grid.Row="0" Margin="0,5,0,0" Height="30" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FF066868" Background="White" BorderBrush="White" Click="voltarButton_Click">
            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                <Image Source="icons/backward.png" Height="15" Width="15" Stretch="Uniform" OpacityMask="Black"></Image>
                <Label Content="VOLTAR" FontFamily="Calibri" Margin="0,0,0,0" FontSize="13" FontWeight="Bold" Foreground="#FF066868"/>
            </StackPanel>
        </Button>
        
        <!-- CONTEÚDO -->
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,0,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" FontWeight="Bold" Content="NOME"/>
        <TextBox x:Name="nometextBox" Grid.Row="2" Height="27" Width="150" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,0,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.1"/>
            </TextBox.Background>
        </TextBox>

        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,40,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" FontWeight="Bold" Content="APELIDO"/>
        <TextBox x:Name="apelidotextBox" Grid.Row="2" Height="27" Width="150" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,40,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.1"/>
            </TextBox.Background>
        </TextBox>

        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,80,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" FontWeight="Bold" Content="CONTACTO"/>
        <Label x:Name="contactotextBox" Grid.Row="2" Height="27" Width="100" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,80,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" BorderBrush="#FF066868"/>

        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,120,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" FontWeight="Bold" Content="E-MAIL"/>
        <TextBox x:Name="emailtextBox" Grid.Row="2" Height="27" Width="220" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,120,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.1"/>
            </TextBox.Background>
        </TextBox>

        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,160,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black" FontWeight="Bold" Content="PALAVRA-PASSE"/>
        <TextBox x:Name="passwordtextBox" Grid.Row="2" Height="27" Width="189.5" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,160,0,0" FontSize="14" FontFamily="Calibri" Foreground="Black">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.1"/>
            </TextBox.Background>
        </TextBox>

        <Button x:Name="guardarButton" Grid.Column="0" Grid.Row="2" Height="25" Width="75" Margin="15,240,0,50" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Calibri" FontSize="14" FontWeight="Bold" Foreground="White" Background="#FF066868" BorderBrush="#FF066868" Click="click_guardar" Content="GUARDAR"/>


        <!-- MENU RODAPÉ -->
        <Button  x:Name="menuBtn" Grid.Column="0" Grid.Row="3" Margin="1,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="menuBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/menu.png" Height="18" Width="18"></Image>
                <Label Content="MENU" FontFamily="Calibri" Margin="0,2,0,-6" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold"></Label>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="novaConsultaBtn" Grid.Column="0" Grid.Row="3" Margin="43,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="novaConsultaBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/add.png" Height="20" Width="20"></Image>
                <Label Content="CONSULTA" FontFamily="Calibri" Margin="0,0,0,-6" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold"></Label>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="listaConsultasBtn" Grid.Column="0" Grid.Row="3" Margin="85,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="listaConsultasBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/list.png" Height="20" Width="20"></Image>
                <Label Content="CONSULTAS" FontFamily="Calibri" Margin="0,0,0,-6" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold" Width="42"></Label>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="agendaBtn" Grid.Column="0" Grid.Row="3" Margin="127,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="agendaBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/calendario.png" Height="20" Width="20"></Image>
                <Label Content="AGENDA" FontFamily="Calibri" Margin="0,0,0,-6" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="pacientesBtn" Grid.Column="0" Grid.Row="3" Margin="169,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="pacientesBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/users.png" Height="20" Width="20"></Image>
                <Label Content="PACIENTES" FontFamily="Calibri" Margin="0,0,0,-6" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="notificacoesBtn" Grid.Column="0" Grid.Row="3" Margin="211,0,0,0" Height="45" Width="43" VerticalAlignment="Top" HorizontalAlignment="Left" Click="notificacoesBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/notification.png" Height="20" Width="20"></Image>
                <Label Content="NOTIFICAÇÃO" FontFamily="Calibri" Margin="-4.5,0,0,-6" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold" Width="46"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="tratamentosBtn" Grid.Column="0" Grid.Row="3" Margin="254.5,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="tratamentosBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/descricao.png" Height="20" Width="20"></Image>
                <Label Content="TRATAMENTO" FontFamily="Calibri" Margin="-5,0,0,-6" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold" Width="50"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="osteovitaeBtn" Grid.Column="0" Grid.Row="3" Margin="296.5,0,0,0" Height="45" Width="42" VerticalAlignment="Top" HorizontalAlignment="Left" Click="osteovitaeBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/info.png" Height="20" Width="20"></Image>
                <Label Content="OSTEOVITAE" FontFamily="Calibri" Margin="-3,0,0,-6" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold" Width="44" RenderTransformOrigin="0.426,0.534"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
        <Button x:Name="contaBtn" Grid.Column="0" Grid.Row="3" Margin="338,0,0,0" Height="45" Width="38" VerticalAlignment="Top" HorizontalAlignment="Left" Click="contaBtn_Click">
            <StackPanel Margin="0,0,0,0">
                <Image Source="icons/user.png" Height="20" Width="20"></Image>
                <Label Content="CONTA" FontFamily="Calibri" Margin="0,0,0,-6" HorizontalContentAlignment="CENTER" VerticalAlignment="Bottom" FontSize="6.5" FontWeight="Bold"/>
            </StackPanel>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="#FF066868" Opacity="0.3"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
